@using LibraryApplication.WebApp.Models.ViewModels
@model List<BookViewModel>

@{
    ViewData["Title"] = "Kitap Listesi";
}

<div class="row">
    <div class="col">
        <h3 class="display-4 border-bottom">
            @ViewData["Title"]
        </h3>
    </div>
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">Kitaplar</h6>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Kitap Adı</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Yayın Evi</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Detaylar</th>
                                <th class="text-secondary opacity-7"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@item.BookName</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column justify-content-center">
                                            <h6 class="mb-0 text-sm">@item.PublisherName</h6>
                                        </div>
                                    </td>
                                    <td class="align-middle text-center text-sm">
                                        <a href="/BookEditionNumber/Index?bookID=@item.BookID">
                                            <span class="badge badge-sm bg-gradient-secondary">Kİtaba Aİt Basım Numaralarını Görüntüle</span>
                                        </a>
                                    </td>
                                    <td class="align-middle">
                                        <a href="">
                                            <span class="badge badge-sm bg-gradient-faded-warning">Düzenle</span>
                                        </a>
                                        <a href="">
                                            <span class="badge badge-sm bg-gradient-danger">Sİl</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>