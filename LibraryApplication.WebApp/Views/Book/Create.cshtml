@using LibraryApplication.WebApp.Models.ViewModels
@model BookCrudViewModel

@{
    ViewData["Title"] = "Kitap Oluştur";
}
@section Styles{
    <partial name="_ValidationSummaryErrrorsPartial" />
}

<div class="row mb-4">
    <div class="col">
        <h3 class="display-4 border-bottom">
            @ViewData["Title"]
        </h3>
    </div>
</div>

<div class="d-flex flex-column ms-auto me-auto ms-lg-auto me-lg-5">
    <div class="card card-plain">
        <div class="card-header">
            <div class="col-6">
                <div class="text-danger small" asp-validation-summary="All"></div>
            </div>
            <div class="card-body">
                <form role="form" method="post" asp-action="Create" asp-controller="Book">
                    <label asp-for="BookName" class="font-weight-bold"></label>

                    <div class="input-group input-group-outline mb-3">
                        <input asp-for="BookName" type="text" class="form-control">
                    </div>

                    <label style="display:block" asp-for="PublisherID" class="font-weight-bold"></label>

                    <div class="input-group input-group-outline mb-3">
                        <select asp-for="PublisherID" class="form-control" asp-items="((List<SelectListItem>)@ViewData["publishers"])">
                            <option selected>
                                Lütfen Yayınevini Seçiniz.
                            </option>
                        </select>
                    </div>

                    <label style="display:block" asp-for="AuthorID" class="font-weight-bold"></label>

                    <div class="input-group input-group-outline mb-3">
                        <select asp-for="AuthorID" class="form-control" asp-items="((List<SelectListItem>)@ViewData["authors"])" multiple>
                            <option selected>
                                Lütfen Yazar Veya Yazarları Seçiniz.
                            </option>
                        </select>
                    </div>
                    <div class="text-center">
                        <input class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" type="submit" value="Gönder">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
